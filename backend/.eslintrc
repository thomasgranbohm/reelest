{
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:typescript-sort-keys/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"simple-import-sort",
		"sort-keys-fix",
		"typescript-sort-keys",
		"sort-destructure-keys"
	],
	"overrides": [
		{
			"files": ["*.js", "*.ts"],
			"rules": {
				"simple-import-sort/imports": [
					"error",
					{
						"groups": [
							["^@?\\w"],
							["^(@|helpers)(/.*|$)"],
							["^(@|lib)(/.*|$)"],
							["^(@|middlewares)(/.*|$)"],
							["^(@|models)(/.*|$)"],
							["^(@|routers)(/.*|$)"],
							["^(@|services)(/.*|$)"],
							["^(@|types)(/.*|$)"],
							["^\\.\\.(?!/?$)", "^\\.\\./?$"],
							["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
							["^\\u0000"]
						]
					}
				]
			}
		}
	]
}
